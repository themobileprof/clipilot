# CLIPilot Registry Configuration
# Copy this file to .env and customize for your deployment

# Server Configuration
PORT=8080

# Public Base URL (for production deployments)
# Used in startup message and can be used for generating absolute URLs
# Examples: https://registry.yourdomain.com, http://localhost:8082
# Choose a port that doesn't conflict with other services on your system
BASE_URL=

# Data Storage
DATA_DIR=./data

# Static Assets (relative to binary location)
STATIC_DIR=./server/static
TEMPLATE_DIR=./server/templates

# Authentication
ADMIN_USER=admin
ADMIN_PASSWORD=change_me_in_production

# Optional: Database connection (future enhancement)
# DATABASE_URL=postgres://user:pass@localhost/clipilot_registry

# Registry URL for CLI clients (REQUIRED for registry features)
# This is used by the CLIPilot CLI to connect to the registry server
# Local development: http://localhost:8082 (or any available port)
# Production: https://registry.yourdomain.com
# Must be set via environment or: clipilot settings set registry_url <url>
REGISTRY_URL=

# Optional: External services
# GITHUB_OAUTH_CLIENT_ID=your_client_id
# GITHUB_OAUTH_CLIENT_SECRET=your_client_secret

# Optional: Security settings
# SESSION_SECRET=generate_a_random_secret_here
# SESSION_TIMEOUT=86400
# MAX_UPLOAD_SIZE=10485760

# Optional: Email notifications (future)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@example.com
# SMTP_PASSWORD=email_password

# Optional: Telemetry and monitoring
# SENTRY_DSN=https://your-sentry-dsn
# LOG_LEVEL=info
